@model IEnumerable<Amazon.Usuario>



<div class="row">
    <div class="col-10">
        <h1 class="display-4">Usuarios</h1>
    </div>
</div>
<br />
<a role="button" asp-controller="Usuario" asp-action="Agregar" class="btn btn-outline-primary">Agregar</a>
<br />
<br />
<p>Cantidad Usuarios: <b>@ViewBag.cantidaddeusuarios</b></p>
<table class="table table-bordered table-hover table-sm">
    <thead>
        <tr>
            <th>Nro de Cliente</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Nro de Tarjeta</th>
            

        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model)
        {
            <tr>
                <td>@usuario.numCliente</td>
                <td>@usuario.nombre </td>
                <td>@usuario.apellido </td>
                <td>@usuario.numTarjeta </td>
                <td>
                    <a asp-controller="Empleado" asp-action="Editar" asp-route-id="@usuario.id" class="btn btn-link">Editar</a> 
                    <a asp-controller="usuario" asp-action="Eliminar" asp-route-id="@usuario.id" class="btn btn-link">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
